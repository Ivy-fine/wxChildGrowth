/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

button.red {
  margin: 0 auto;
  width:622rpx !important;
  height:104rpx !important;
  line-height: 70rpx;
  background: linear-gradient(
      314deg,
      rgba(255, 101, 96, 1) 0%,
      rgba(255, 106, 67, 1) 100%
  );
  box-shadow: 0rpx 2rpx 23rpx 0rpx rgba(255, 72, 60, 0.48);
  border-radius: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  font-weight: normal;
  margin-bottom: 40rpx;
}

.tabBar {
  width:100vw;
  height:132rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 51rpx 51rpx 0rpx 0rpx;
  justify-content: space-between;
  display: flex;
  align-items: center;
}
.tabBar text {
  font-size: 36rpx;
  color:  #b1b1ba;
  padding-bottom: 20rpx;
  margin: 0 66rpx;
  border-bottom:4rpx solid transparent;
}
.tabBar text.active {
  color: #ff6f7a;
  border-bottom: 4rpx solid;
}