.record{
  width: 700rpx;
  margin: 0 auto;
  position: relative;
  padding-top: 45rpx;
}
.title {
  position: absolute;
  top: 0;
  left: 20rpx;
  width:240rpx;
  height:80rpx;
  background: linear-gradient(90deg, #3490ea, #2dc0dc);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 12rpx;
}
.record-item{
  height:240rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 0 40rpx;
  padding-top: 60rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}
.record-item text{
  margin-right: 20rpx;
  font-size: 30rpx;
}
.content{
  flex-shrink: 0;
}
.content-line{
  margin-bottom: 45rpx;
}
.edit {
  color: rgba(247, 69, 130, 0.71);
  font-size: 28rpx;
}
.statu {
  color: #fff;
  background: rgba(247, 69, 130, 0.71);
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 6rpx;
}
.time {
  color: #b1b1ba;
  font-size: 36rpx;
}
button.toDetail {
  padding: 0;
  margin: 0;
  width: 206rpx;
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: rgba(247, 69, 130, 0.71);
  background: none;
  border-radius: 50rpx;
  border: 3rpx solid rgba(255, 111, 122, 0.65);
}