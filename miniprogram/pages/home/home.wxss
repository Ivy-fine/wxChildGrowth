.home{
  height: 100vh;
}
.children{
  width: 100%;
  height: 440rpx;
  background: linear-gradient(
      19deg,
      rgba(255, 111, 122, 0.65) 0%,
      rgba(247, 69, 130, 0.71) 100%
    );
}
.home-main{
  min-height: calc(100vh - 440rpx);
  background: rgba(245, 245, 245, 1);
  border-radius: 51rpx 51rpx 0rpx 0rpx;
  margin-top: -51rpx;
  box-sizing: border-box;
  padding-bottom: 132rpx;
}
.child-info{
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  margin-bottom: 45rpx;
  text-align: center;
}
.info-title{
  font-size: 24rpx;
  color:  #767676;
  line-height: 44rpx;
}
.info-val{
  font-size: 30rpx;
}
.tabBar {
  position: fixed;
  bottom: 0;
  border-radius: 51rpx 51rpx 0rpx 0rpx;
}

.tabBar text.active {
  color: #ff6f7a;
  border-bottom-color: #ff6f7a;
}

.addRecord {
  width:150rpx;
  height:150rpx;
  background: linear-gradient(-135deg, #fb85b5 0%, #febfac 100%);
  border-radius: 50%;
  position: fixed;
  bottom: 20rpx;
  line-height: 144rpx;
  left: 50%;
  transform: translate(-50%);
  text-align: center;
  color: #fff;
  font-size: 100rpx;
}
.addChild {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  text-align: center;
  line-height: 1;
  color: #fff;
  font-size: 80rpx;
  background: none;
  z-index: 110;
}